<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWorkout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addButton"
        app:layout_constraintTop_toBottomOf="@id/writeWorkout"
        android:text="ADD"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter time"
        android:id="@+id/enterTime"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SECONDS"
        android:id="@+id/editSeconds"
        app:layout_constraintTop_toBottomOf="@id/enterTime"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editWorkout"
        android:text="Enter workoutplan"
        app:layout_constraintTop_toBottomOf="@id/editSeconds"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/writeWorkout"
        android:hint="WORKOUT"
        app:layout_constraintTop_toBottomOf="@id/editWorkout"/>

</androidx.constraintlayout.widget.ConstraintLayout>